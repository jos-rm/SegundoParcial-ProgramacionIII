@model PruebaParcial2_JoselineRuiz.Models.Tarea

@{
    ViewData["Title"] = "Detalles de la Tarea";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h3 class="mb-0">
                    <i class="bi bi-info-circle"></i> Detalles de la Tarea
                </h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Descripción</dt>
                    <dd class="col-sm-9">@Model.Descripcion</dd>

                    <dt class="col-sm-3">Estado</dt>
                    <dd class="col-sm-9">
                        @if (Model.Estado == EstadoTarea.Completada)
                        {
                            <span class="badge bg-success">@Model.Estado</span>
                        }
                        else if (Model.Estado == EstadoTarea.EnProgreso)
                        {
                            <span class="badge bg-warning text-dark">@Model.Estado</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Model.Estado</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Dificultad</dt>
                    <dd class="col-sm-9">
                        @if (Model.Dificultad == DificultadTarea.Facil)
                        {
                            <span class="badge bg-info">Fácil</span>
                        }
                        else if (Model.Dificultad == DificultadTarea.Media)
                        {
                            <span class="badge bg-warning text-dark">Media</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Difícil</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Fecha de Creación</dt>
                    <dd class="col-sm-9">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-3">Fecha Límite</dt>
                    <dd class="col-sm-9">@(Model.FechaLimite?.ToString("dd/MM/yyyy") ?? "Sin fecha límite")</dd>

                    <dt class="col-sm-3">Tiempo Estimado</dt>
                    <dd class="col-sm-9">@Model.TiempoEstimadoHoras.ToString("0.##") horas</dd>

                    <dt class="col-sm-3">Meta Asociada</dt>
                    <dd class="col-sm-9">
                        @if (Model.Meta != null)
                        {
                            <a asp-controller="Metas" asp-action="Details" asp-route-id="@Model.MetaId">
                                @Model.Meta.Titulo
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">Sin meta asociada</span>
                        }
                    </dd>
                </dl>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver al listado
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.IdTarea" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.IdTarea" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>