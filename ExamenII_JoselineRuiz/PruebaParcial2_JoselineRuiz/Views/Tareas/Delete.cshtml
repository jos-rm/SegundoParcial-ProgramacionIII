@model PruebaParcial2_JoselineRuiz.Models.Tarea

@{
    ViewData["Title"] = "Eliminar Tarea";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Eliminar Tarea
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <strong>¿Está seguro que desea eliminar esta tarea?</strong>
                    <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Descripción</dt>
                    <dd class="col-sm-9">@Model.Descripcion</dd>

                    <dt class="col-sm-3">Estado</dt>
                    <dd class="col-sm-9">@Model.Estado</dd>

                    <dt class="col-sm-3">Dificultad</dt>
                    <dd class="col-sm-9">@Model.Dificultad</dd>

                    <dt class="col-sm-3">Fecha Creación</dt>
                    <dd class="col-sm-9">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-3">Meta Asociada</dt>
                    <dd class="col-sm-9">@(Model.Meta?.Titulo ?? "Sin meta")</dd>
                </dl>

                <form asp-action="Delete" class="mt-4">
                    <input type="hidden" asp-for="IdTarea" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirmar Eliminación
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>