@model PruebaParcial2_JoselineRuiz.Models.Meta

@{
    ViewData["Title"] = "Detalles de la Meta";
}

<h2>Detalles de la Meta</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Titulo)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Titulo)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Descripcion)</dt>
        <dd class="col-sm-9">@(Model.Descripcion ?? "-")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Categoria)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaCreacion)</dt>
        <dd class="col-sm-9">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaLimite)</dt>
        <dd class="col-sm-9">@(Model.FechaLimite?.ToString("dd/MM/yyyy") ?? "-")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Prioridad)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Prioridad)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Estado)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>

        <dt class="col-sm-3">Cantidad de Tareas</dt>
        <dd class="col-sm-9">@Model.Tareas.Count</dd>
    </dl>

    @if (Model.Tareas.Any())
    {
        <h4 class="mt-4">Tareas Asociadas</h4>
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Descripción</th>
                    <th>Estado</th>
                    <th>Dificultad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tarea in Model.Tareas)
                {
                    <tr>
                        <td>@tarea.Descripcion</td>
                        <td>@tarea.Estado</td>
                        <td>@tarea.Dificultad</td>
                        <td>
                            <a asp-controller="Tareas" asp-action="Details" asp-route-id="@tarea.IdTarea" class="btn btn-sm btn-info">Ver</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.IdMeta" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
</div>