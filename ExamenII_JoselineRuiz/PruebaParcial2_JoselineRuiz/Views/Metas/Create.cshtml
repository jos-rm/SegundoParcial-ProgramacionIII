@model PruebaParcial2_JoselineRuiz.Models.Meta

@{
    ViewData["Title"] = "Crear Meta";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">
                    <i class="bi bi-plus-circle"></i> Crear Nueva Meta
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Titulo" class="form-label fw-bold"></label>
                        <input asp-for="Titulo" class="form-control" placeholder="Ej: Aprender programación" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label fw-bold"></label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Describe tu meta (opcional)"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Categoria" class="form-label fw-bold"></label>
                            <select asp-for="Categoria" class="form-select" asp-items="ViewBag.Categorias">
                                <option value="">-- Seleccione una categoría --</option>
                            </select>
                            <span asp-validation-for="Categoria" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Prioridad" class="form-label fw-bold"></label>
                            <select asp-for="Prioridad" class="form-select" asp-items="ViewBag.Prioridades">
                                <option value="">-- Seleccione prioridad --</option>
                            </select>
                            <span asp-validation-for="Prioridad" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Estado" class="form-label fw-bold"></label>
                            <select asp-for="Estado" class="form-select" asp-items="ViewBag.Estados">
                                <option value="">-- Seleccione un estado --</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaLimite" class="form-label fw-bold">Fecha Límite (opcional)</label>
                            <input asp-for="FechaLimite" class="form-control" type="date" />
                            <span asp-validation-for="FechaLimite" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Crear Meta
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}